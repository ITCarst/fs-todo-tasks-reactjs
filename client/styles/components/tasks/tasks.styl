@import "../../helpers/variables"
@import "../../helpers/mixins"

.tasks-list-holder
	flexbox(flex)

textarea.description
	font-size 13px
	font-weight 400
	padding 10px
	background-color white
	flex 1 1 auto
	min-width 1px

input.title 
	display block
	font-size 20px
	font-weight 500
	padding-bottom 4px
	margin-top 20px
	padding 10px

.icon
	height 16px
	width 16px
	fill #b7bfc6
	&:hover 
		fill #32c1ff
		color #32c1ff

.btn-add-task
	margin-bottom 15px
	max-width 100px;

.main_pane
	-webkit-transition margin-left 0.25s ease-out, width 0.25s ease-out
	transition margin-left 0.25s ease-out, width 0.25s ease-out
	-webkit-box-flex 5500
	-webkit-flex 5500 1 605px
	-ms-flex 5500 1 605px
	flex 5500 1 605px
	min-width 405px
	flexbox(flex)
	flex-direction column


.right_sidebar
	-webkit-box-flex 4500
	-webkit-flex 4500 0 495px
	-ms-flex 4500 0 495px
	flex 4500 0 495px
	-webkit-box-pack start
	-webkit-justify-content flex-start
	-ms-flex-pack start
	justify-content flex-start
	-webkit-transition margin-left 0.2s
	transition margin-left 0.2s
	margin-left 15px
	max-width 500px
	position relative
	z-index 0
	flexbox(flex)
	flex-direction column
	border-left 1px solid #b7bfc6
	padding-left 10px

.task_create
	width 100%

.close_icon
	width 20px
	height 20px
	margin-left 100%


.task_descr_holder
	flex(2 100%)
	display none
	&.active
		display block
	small
		font-size 10px
	.task_descr
		width 100%
		min-height 60px
		padding 10px

